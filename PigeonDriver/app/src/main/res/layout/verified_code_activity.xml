<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pigeon.driver.VerifiedCodeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/text_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:text="Verification Code"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/comfortaa_regular"
                tools:targetApi="jelly_bean"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/text_show_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="Pleace type the verification code sent to \n +856 0000000000"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/comfortaa_regular"
                tools:targetApi="jelly_bean"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/main"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:fontFamily="@font/comfortaa_regular"
                tools:targetApi="jelly_bean"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TableLayout
                android:id="@+id/keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow android:padding="15dp">

                    <TextView
                        android:id="@+id/digit_1"
                        android:text="1"
                        android:tag="1"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/digit_2"
                        android:text="2"
                        android:tag="2"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/digit_3"
                        android:text="3"
                        android:tag="3"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>
                </TableRow>

                <TableRow android:padding="15dp">

                    <TextView
                        android:id="@+id/digit_4"
                        android:text="4"
                        android:tag="4"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>

                    <TextView
                        android:id="@+id/digit_5"
                        android:text="5"
                        android:tag="5"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>

                    <TextView
                        android:id="@+id/digit_6"
                        android:text="6"
                        android:tag="6"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>
                </TableRow>

                <TableRow android:padding="15dp">

                    <TextView
                        android:id="@+id/digit_7"
                        android:text="7"
                        android:tag="7"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>

                    <TextView
                        android:id="@+id/digit_8"
                        android:text="8"
                        android:tag="8"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>

                    <TextView
                        android:id="@+id/digit_9"
                        android:text="9"
                        android:tag="9"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>
                </TableRow>

                <TableRow android:padding="15dp">

                    <TextView
                        android:id="@+id/digit_clear"
                        android:text=""
                        android:tag="@null"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>

                    <TextView
                        android:id="@+id/digit_0"
                        android:text="0"
                        android:tag="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/comfortaa_regular"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:targetApi="jelly_bean"/>

                    <ImageView
                        android:id="@+id/ditgit_backspace"
                        android:src="@drawable/ic_backspace"
                        android:gravity="center"
                        android:tag="@null"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="2dp"/>

                </TableRow>
            </TableLayout>


        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackground"/>

</RelativeLayout>
